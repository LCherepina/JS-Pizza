<% include common/header.ejs %>

<div class="discount-panel">
    <div class="discount-title">
        Цього тижня<br> на все
    </div>
    <div class="discount-text">
        -20%
    </div>
    <img class="discount" src="assets/images/discount.svg">
</div>

<div class="container-fluid">
    <div class="row row-1">
        <div class="navbar navbar-fixed-top top-panel" >

            <div class="site-icon">
                <div class="discount-before top-discount">
                </div>
                <a class="pizza-logo"  href="/">

                    <div id="pizza-title2" class="title-1">
                        Pizza
                    </div>
                    <div class="title-2">
                        KMA
                    </div>

                </a>
                <img class="discount" src="assets/images/discount.svg">
            </div>

            <div class="header-top-row">

                <div class="main-header-top-items">
                    <div class="main-header-top-item phone-number visible-xs-inline-block visible-sm-inline-block visible-lg-inline-block visible-md-inline-block">
                        (044) 222 5 222
                    </div>
                    <div class="main-header-top-item work-days visible-lg-inline-block visible-md-inline-block">
                        24 години/ 7 днів на тиждень
                    </div>
                    <div class="main-header-top-item delivery visible-lg-inline-block">
                        Безкоштовна доставка піци
                    </div>
                    <div type="button" class="main-header-top-item btn btn-warning sign-in-button">
                        Ввійти
                    </div>
                </div>
            </div>

            <div class="header-down-row">
                <span class=" pizza-page" style="color:white;">
                    <a href="/" style="color:white;" class="hidden-xs">Піца</a> &nbsp;
                </span>
            </div>
        </div>
        <div class="left-panel">
            <div class="form" id="form">
                <div class="form-description-1">
                    1. Контактні дані
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <form class="form-horizontal">
                            <div class="form-group name-group">
                                <label class="col-sm-2 control-label">Ім’я</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="inputName" placeholder="Ім’я Прізвище">
                                </div>
                                <span class="name-help-block" hidden="true" >
                                Введіть тільки власне ім’я, без цифр
                            </span>
                            </div>
                            <div class="form-group phone-group">
                                <label class="col-sm-2 control-label">Телефон</label>
                                <div class="col-sm-10">
                                    <input  class="form-control" type="text" id="inputPhone" placeholder="+380991111111">
                                </div>
                                <span class="phone-help-block" hidden="true">
                                Введіть номер телефону у форматі +380 або почніть з 0
                            </span>
                            </div>
                            <div class="form-group address-group">
                                <label class="col-sm-2 control-label">Адреса</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="inputAddress" placeholder="Київ, вул. Спаська, 2">
                                </div>
                                <span class="address-help-block" hidden="true">
                                Введіть адресу доставки піци
                            </span>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-5 order-summary">
                        <div class=" bs-callout bs-callout-warning">
                            <h4>Інформація про замовлення</h4>
                            <p class="order-time">
                                <b>Приблизний час доставки:</b>
                                <span class="order-time-info">невідомий</span>
                            </p>
                            <p class="order-address">
                                <b>Адреса доставки: </b>
                                    <span class="order-address-info">невідома</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group next-step-wrap">
                        <div class="next-step-width">
                            <button  type="button" class="btn btn-warning btn-block next-step-button" id="liqpay">
                                Далі
                                <i class="glyphicon glyphicon-chevron-right icon-white">
                                </i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
            <div class="google-maps" id="map">

            </div>




        </div>
        <div class="right-panel">
            <div class="r1">
                <span class="order-list-title">
                    Замовлення
                    <span class="badge orange orders-count-span">0</span>
                </span>


            </div>
            <div class="all-orders r2">
                <div id="cart">


                </div>
            </div>

            <div class="order-state r3">
                <span class="sum-title">
                        Сума замовлення
                    </span>
                <span class="sum-number"></span>
                <div class="do-order-button">

                    <button class="btn btn-default btn-lg btn-block button-edit" >
                        Редагувати замовлення
                    </button>

                </div>
            </div>
        </div>
    </div>

</div>
